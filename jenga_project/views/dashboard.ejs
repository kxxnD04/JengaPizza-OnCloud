            font-weight: bold;
            color: rgb(187, 62, 0);
            margin-bottom: 30px;
        }

        /* Summary Cards */
        .stat-card {
            background: white;
            border-radius: 12px;
            padding: 25px;
            box-shadow: 0 2px 8px rgba(0,0,0,0.1);
            transition: transform 0.3s, box-shadow 0.3s;
            margin-bottom: 20px;
            border-left: 4px solid rgb(187, 62, 0);
