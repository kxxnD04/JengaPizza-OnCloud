                </div>
            </div>
        </div>
    </div>
    <script>
        const dic = {'preparing': 'images/prepare-icon.png', 'pending': 'images/waiting-icon.png',
                    'delivering': 'images/deliver-icon.png', 'success': 'images/success-icon.png'
        }
        function getCurrentDateTime() {
            const now = new Date();
            
            // Format date as DD/MM/YYYY
            const day = String(now.getDate()).padStart(2, '0');
            const month = String(now.getMonth() + 1).padStart(2, '0');
            const year = now.getFullYear();
            
            // Format time as hh:mm
            const hours = String(now.getHours()).padStart(2, '0');
            const minutes = String(now.getMinutes()).padStart(2, '0');
            
            // Return formatted date and time
            return `${day}/${month}/${year} ${hours}:${minutes}`;
        }

        $(document).ready(function () {
            $('.timestamp').each(function() {
                $(this).text('อัพเดทเมื่อ : ' + getCurrentDateTime());
            });

            $('.status-dropdown').on('change', function () {
                let orderId = $(this).data('order-id');
                let newStatus = $(this).val();
                // console.log(`Order ${orderId} changed to: ${newStatus}`);
                

                let iconSrc = dic[newStatus];
    
                // เปลี่ยนรูปภาพที่เกี่ยวข้องกับ Order ID นั้น ๆ
                $(`select[data-order-id="${orderId}"]`).closest('.row').find('img.order-icon').attr('src', iconSrc);
                // อัพเดทเวลา
                $(`select[data-order-id="${orderId}"]`).closest('.row').find('p.text-muted:last').text('อัพเดทเมื่อ : ' + getCurrentDateTime());
                
                // อัพเดทพวกสถานะไปที่ order ของลูกค้าคนนั้น ๆ
