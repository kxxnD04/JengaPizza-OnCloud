    <style>
        @font-face {
            font-family: Prompt;
            src: url("fonts/Prompt-Regular.ttf");
        }
        body {
            font-family: Prompt;
            margin: 0;
            padding: 0;
        }

        /* Background Image */
        body::before {
            content: "";
            position: fixed;
            width: 100%;
            height: 100%;
            background-image: url("images/bg-pizza.jpg");
            opacity: 0.1;
            z-index: -1;
        }
        
        /* Specific adjustments for working with a fixed header */
        .main-content {
            padding-top: 60px; /* Same as header height */
        }
        
        /* Banner carousel styling */
        /* Banner carousel styling - updated for better image fit */
        .banner-carousel {
            position: relative;
            width: 100%;
            overflow: hidden;
            margin-bottom: 20px;
        }
        
        .banner-container {
            width: 100%;
            position: relative;
            overflow: hidden;
            /* Remove fixed height to prevent cropping */
            height: auto;
            max-height: none;
        }
        
        .banner-slides {
            display: flex;
            width: 300%; /* 3 slides */
            transition: transform 0.5s ease-in-out;
        }
        
        .banner-slide {
            width: 33.333%; /* Each slide takes 1/3 of the container */
            flex-shrink: 0;
        }
        
        .banner-image {
            width: 100%;
            height: auto; /* This is key - let height adjust naturally */
            display: block;
            object-fit: contain; /* Changed from cover to contain */
        }
        
        /* Navigation dots - position relative to image bottom */
        .banner-dots {
            position: absolute;
            bottom: 80px;
            left: 50%;
            transform: translateX(-50%);
            display: flex;
            gap: 10px;
            z-index: 10;
        }
        
        .dot {
            width: 12px;
            height: 12px;
            border-radius: 50%;
            background-color: rgba(0, 0, 0, 0.5);
            cursor: pointer;
            transition: background-color 0.3s;
        }
        
        .dot.active {
            background-color: rgb(255, 255, 255);
        }
        
        /* Content section styling */
        .content-section {
            padding: 40px 0;
            background-color: #f5f5f5;
        }

        .pizza-model {
            margin-top: 100px;
            margin-bottom: 100px;
        }

        .model-text {
            text-align: center;
            font-size: 80px;
            font-weight: 900;
            font-family: Arial, Helvetica, sans-serif;
        }

        .box {
            text-align: center;
            width: 100%;
        }

        /* Fix Flexbox Centering */
        .container-center {
            margin: auto;
            display: flex;
            align-items: center;  /* Ensure vertical centering */
            width: 80%;
        }

        .card {
            background-color: rgb(245, 245, 245);
            border: none;
            transition: transform 0.2s;
            cursor: pointer;
            align-items: center;
            text-align: center;
            margin: 10px;
        }

        .card:hover {
            transform: scale(1.05);
        }

        .card a {
            text-decoration: none;
        }

        .card img {
            width: 200px;
            height: 200px;
            object-fit: cover;
            border-radius: 8px;
        }

        .howto-context .card {
            height: 300px;
            box-shadow: 4px 4px 10px rgba(0, 0, 0, 0.3);
        }

        .howto-context svg {
            width: 80px;
            height: 80px;
            margin-bottom: 20px;
            color: rgb(187, 62, 0);
        }

        .motto-text {
            color: rgb(187, 62, 0);
        }

        .motto-section {
            display: flex;
            align-items: center;
            justify-content: center;
            padding: 50px 20px;
        }
        
        .delivery-image img {
            max-width: 100%;
            border-radius: 10px;
        }

        @media (max-width: 768px) {
            .model-text {
                font-size: 50px;
            }
        }
    </style>
</head>

